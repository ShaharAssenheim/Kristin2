@model Kristin2.Models.CustomerModel

@{
    ViewBag.Title = "CustomersPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="@Url.Content("~/Content/customerPage.css")" rel="stylesheet" />

<div class="container bootstrap snippet mt-5">
    <div class="row mt-5">
        <div class="col-sm-10"><h1 id="ProfileName">@Model.FirstName @Model.LastName</h1></div>

    </div>
    <div class="row">
        <div class="col-sm-3">
            <!--left col-->

            <div class="text-center">
                <img src="@Model.Image" class="avatar img-circle img-thumbnail mb-2" alt="avatar">

                <!-- COMPONENT START -->
                <div class="form-group">
                    <div class="input-group input-file" name="Fichier1">
                        <input id="imageInput" type="text" class="form-control" name="Image" placeholder='בחר תמונה...' />
                        <button id="imageBtn" class="btn btn-secondary btn-choose" type="button">העלה</button>
                    </div>
                </div>

            </div>

            <div id="spinner">
                <img id="img-spinner" src="@Url.Content("~/Content/imgs/loader.gif")" alt="Loading..." />
            </div>

        </div><!--/col-3-->
        <div class="col-sm-9">
            <ul class="nav nav-tabs mb-4 border-light">
                <li class="active"><a data-toggle="tab" href="#home" class="nav-link btn-secondary ml-1">פרטים אישיים</a></li>
                <li><a data-toggle="tab" href="#messages" class="nav-link btn-secondary">היסטוריית טיפולים</a></li>
            </ul>

            <div class="tab-content">
                <div class="tab-pane active" id="home">

                    @using (Html.BeginForm("Edit", "Customer"))
                    {
                        <div class="form-group" style="display:none">
                            <div class="col-xs-6">
                                <label for="ID" class="float-right"><h4>מספר משתמש</h4></label>
                                <input type="text" class="form-control" name="ID" id="ID"  value="@Model.ID" >
                               
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-6">
                                <label for="UserName" class="float-right"><h4>שם משתמש</h4></label>
                                <input type="text" class="form-control" name="UserName" id="UserName" placeholder="@Model.UserName" readonly>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-6">
                                <label for="FirstName" class="float-right"><h4>שם פרטי</h4></label>
                                <input type="text" class="form-control" name="FirstName" id="FirstName" placeholder="@Model.FirstName" readonly>
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="LastName" class="float-right"><h4>שם משפחה</h4></label>
                                <input type="text" class="form-control" name="LastName" id="LastName" placeholder="@Model.LastName" readonly>
                            </div>
                        </div>

                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="Phone" class="float-right"><h4>טלפון</h4></label>
                                <input type="text" class="form-control" name="Phone" id="Phone" placeholder="@Model.Phone" readonly>
                            </div>
                        </div>

                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="Email" class="float-right"><h4>אימייל</h4></label>
                                <input type="email" class="form-control" name="Email" id="Email" placeholder="@Model.Email" readonly>
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="Password" class="float-right"><h4>סיסמה</h4></label>
                                <input type="password" class="form-control" name="Password" id="Password" placeholder="@Model.Password" readonly>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-12">
                                <br>
                                <button id="edit" class="btn btn-lg btn-secondary" type="reset"><i class="glyphicon glyphicon-repeat"></i> ערוך</button>
                                <button class="btn btn-lg btn-secondary" type="submit"><i class="glyphicon glyphicon-ok-sign"></i> שמור</button>

                            </div>
                        </div>
                    }

                    <hr>

                </div><!--/tab-pane-->
                <div class="tab-pane" id="messages">

                    <h2></h2>

                    <hr>
                    <form class="form" action="##" method="post" id="registrationForm">
                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="first_name"><h4>First name</h4></label>
                                <input type="text" class="form-control" name="first_name" id="first_name" placeholder="first name" title="enter your first name if any.">
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="last_name"><h4>Last name</h4></label>
                                <input type="text" class="form-control" name="last_name" id="last_name" placeholder="last name" title="enter your last name if any.">
                            </div>
                        </div>

                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="phone"><h4>Phone</h4></label>
                                <input type="text" class="form-control" name="phone" id="phone" placeholder="enter phone" title="enter your phone number if any.">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-6">
                                <label for="mobile"><h4>Mobile</h4></label>
                                <input type="text" class="form-control" name="mobile" id="mobile" placeholder="enter mobile number" title="enter your mobile number if any.">
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="email"><h4>Email</h4></label>
                                <input type="email" class="form-control" name="email" id="email" placeholder="you@email.com" title="enter your email.">
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="email"><h4>Location</h4></label>
                                <input type="email" class="form-control" id="location" placeholder="somewhere" title="enter a location">
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="password"><h4>Password</h4></label>
                                <input type="password" class="form-control" name="password" id="password" placeholder="password" title="enter your password.">
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="password2"><h4>Verify</h4></label>
                                <input type="password" class="form-control" name="password2" id="password2" placeholder="password2" title="enter your password2.">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-12">
                                <br>
                                <button class="btn btn-lg btn-success" type="submit"><i class="glyphicon glyphicon-ok-sign"></i> Save</button>
                                <button class="btn btn-lg" type="reset"><i class="glyphicon glyphicon-repeat"></i> Reset</button>
                            </div>
                        </div>
                    </form>

                </div><!--/tab-pane-->
            </div><!--/tab-pane-->
        </div><!--/tab-content-->
    </div><!--/col-9-->
</div><!--/row-->


@section scripts{
    <script>     
        $(document).ready(function () {
            $('#edit').click(function () {
                $("input").removeAttr("readonly");
                $("input").css('background-color', '#faf3e1');
                
            });
        });


    </script>
}